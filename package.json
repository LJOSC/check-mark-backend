  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "ts-node-dev -r tsconfig-paths/register --transpile-only -- src/index.ts",
    "start": "NODE_ENV=production node dist/src/index.js",
    "build": "tsc && tsc-alias",
    "lint": "eslint 'src/**/*.{js,ts,tsx}'",
